<div class="wrapper">
  <div class="container">
    <!-- <div class="row"> -->

      <% @activities.each do |activity| %>
        <div class="col-xs-12 col-sm-6 col-md-3">
          <%= link_to activity_proposals_path(activity) do %>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path "#{activity.category}.jpg" %>);">
            <div class="card-category">Popular</div>
            <div class="card-description">
              <h2><%= activity.category %></h2>
              <p>Very cool stuff, useful and smart</p>
            </div>
            <!-- <img class="card-user avatar" src="user.jpg"> -->
          </div>
          <% end %>
        </div>
      <% end %>
  </div>
</div>

